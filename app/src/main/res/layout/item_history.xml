<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/iv_dummy"
        android:layout_width="@dimen/min_view_size"
        android:layout_height="@dimen/min_view_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/bike" />


    <TextView
        android:id="@+id/tv_dummy_title"
        style="@style/DummyTitle"
        android:text="TITLE"
        app:layout_constraintStart_toEndOf="@+id/iv_dummy"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_dummy_subtitle"
        style="@style/DummyDescription"
        android:text="DESCRIPTION"
        app:layout_constraintStart_toEndOf="@+id/iv_dummy"
        app:layout_constraintTop_toBottomOf="@+id/tv_dummy_title" />


</androidx.constraintlayout.widget.ConstraintLayout>